	<meta http-equiv="Content-Type" content="text/html; charset=utf-8"></meta>
	<style type="text/css">
		body {
			font-size: 0.8em;
			padding: 0.5em;
			font-family: arial;
		}
		.clear {
			clear: both;
			width: 0px;
			height: 0px;
			visibility: hidden;
		}
		.title { 
			text-align:center;
		}
		#gridDiv{
			margin: 3em;
			position: relative;
		}
 		#grid{
			overflow: hidden;
			width: 910px;
		}
		#grid table{
			border-collapse: collapse;
			border: 1px solid #ddd;
		}
		#grid td, #grid th{
			border: 1px solid #ddd;
			padding: 3px;
		}
		#grid .dojoxGridxBody {
			height: 400px;
			overflow: hidden;
		}
		.dojoxGridxBody {	float: left; overflow: hidden;}
		.dojoxGridxVScroller {	overflow: scroll; overflow-x: hidden; float:left; width: 20px; border: none;}


	</style>
	<script type="text/javascript" src="../../../../dojo/dojo.js" djConfig="isDebug:true, parseOnLoad: true"></script>
	<script type="text/javascript">
		dojo.require("dojo.parser");
		dojo.require("dojo.store.JsonRest");
		dojo.require("dojox.grid.gridx._Grid");
		dojo.require("dojox.grid.gridx.core.model.AsyncCache");
		dojo.require('dojox.grid.gridx.core.model.FormatSorter');
		dojo.require('dojox.grid.gridx.core.select.RowSelector');
		dojo.require('dojox.grid.gridx.core.select.ColumnSelector');
		dojo.require('dojox.grid.gridx.core.select.CellSelector');
		dojo.require('dojox.grid.gridx.core.move.RowMover');
		dojo.require('dojox.grid.gridx.core.move.ColumnMover');
		dojo.require('dojox.grid.gridx.core.modify.ColumnModifier');

		var store = new dojo.store.JsonRest({
			target: "demoStore.php/"
		});
		var columns = [
			{name: 'Col1', field: 'id', id: 'col1', width: '100px'},
			{name: 'ColStr', field: 'str', id: 'colstr', width: '100px'},
			{name: 'Col2', field: 'number', id: 'col2', width: '90px', template: '<font color="red">${col2}</font>'},
			{name: 'Col3', field: 'number', id: 'col3', width: '50px'},
			{name: 'Col4', field: 'number', id: 'col4', width: '300px'},
			{name: 'Col5', field: 'number', id: 'col5', width: '100px'},
			{name: 'Col6', field: 'number', id: 'col6', width: '100px'},
			{name: 'Col5+6', width: '100px', formatter: function(data){return data.number * 2;}}
		];
		dojo.addOnLoad(function(){
			var t1 = (new Date()).getTime();
			window.grid = new dojox.grid.gridx._Grid({
				id: 'grid',
				store: store,
				isAsync: true,
				structure: columns,
				modules: [
					dojox.grid.gridx.core.select.RowSelector,
					dojox.grid.gridx.core.select.ColumnSelector,
					dojox.grid.gridx.core.select.CellSelector,
					dojox.grid.gridx.core.move.RowMover,
					dojox.grid.gridx.core.move.ColumnMover,
					dojox.grid.gridx.core.modify.ColumnModifier
				],
				modelExtensions: [
					dojox.grid.gridx.core.model.FormatSorter
				],
				cacheSize: 200,
				pageSize: 200,
				neighborSize: 100,
				
				autoHeight: false,
				height: '400px'
			});
			var t2 = (new Date()).getTime();
			dojo.place(grid.domNode, 'gridDiv', 'first');
			grid.startup();
			var t3 = (new Date()).getTime();
			console.log("Create time: ", t2 - t1, "; Startup Time: ", t3 - t2);
		});
	</script>
</head>
